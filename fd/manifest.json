{
  "manifest_version": 2,	
	
  "name": "Search Button for thefreedictionary.com",
  "version": "1.0",

  "background": {
    "scripts": ["content/background.js"],
    "persistent": false
  },
 
  "description": "thefreedictionary.com",
 
  "browser_action": {
    "default_icon": "icons/fd.png"
  },
 
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/selection_service.js"]
    }
  ],
  
  "permissions": ["http://www.thefreedictionary.com/", "tabs",  "activeTab"]
}